#app {
  height: 100%;
}
.login-banner{
    width: 100%;
    height: 100%;
    background: url('../../image/login/login-banner.jpg');
    background-size:cover;
      .login-logo{
        margin: 0 auto;
        height: 8%;
        width: 29%;
        background: url('../../image/login/login-logo.png');
        background-size: 100% 100%;
        background-repeat: no-repeat;
        position: absolute;
        top: 15%;
        left: 33%;
      }
      .login-form {
        margin: 0 auto;
        height: 40%;
        width: 35%;
        background: url('../../image/login/login-form.png');
        background-size: 100% 100%;
        background-repeat: no-repeat;
        position: absolute;
        top: 28%;
        left: 30%;
        box-shadow: 7px 7px 50px #FFFFFF;
      }

  .formlayout {
    width: 17%;
    position: absolute;
    top: 35%;
    left: 47%;
     button{
         margin-top: -10px;
     }
  }
  .login-text{
      padding: 0 0 9% 0;
      color: #2381C1;
      font-size: 28px;
      font-weight: bold;
  }
}

